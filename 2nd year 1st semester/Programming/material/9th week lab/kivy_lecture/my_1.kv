
<MyGridLayout>
	
	name:name
	pizza:pizza
	color:color
	output:output
	
	GridLayout:
		cols:2
		size:root.width,root.height
		Label:
			text: "Name"
			font_size: 20
			
		TextInput:
			id: name
			multiline:False

		Label:
			text: "Favorite Pizza"
			font_size: 20
		TextInput:
			id: pizza
			multiline:False
			
		Label:
			text: "Favorite Color"
		TextInput:
			id: color
			multiline:False	

		Button:
			text: "Submit"
			font_size: 32
			on_press: root.press()
		Label:
			text: ""
			id: output
